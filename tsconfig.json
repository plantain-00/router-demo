{
    "compilerOptions": {
        "target": "es5",

        "lib": [
            "es2015.promise",
            "es5",
            "dom"
        ],

        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "LF"
    },
    "files": [
        "react/index.tsx",
        "react/server.tsx",
        "vue/index.ts",
        "vue/server.ts"
    ]
}